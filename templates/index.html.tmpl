<!-- Side-by-Side Layout for Character and Item Viewers -->
<div class="flex space-x-8 justify-center">
    <!-- Character Viewer -->
    <div class="warcraft-frame w-[500px]">
        <h1>Character Viewer</h1>
        <div id="model_3d" class="w-full h-96"></div> <!-- Character viewer area -->
        
        <!-- Character Customization Form -->
        <form id="character-form" class="form-container">
            <!-- Race Selector -->
            <div>
                <label for="race" class="form-label">Select Race:</label>
                <select id="race" class="form-control">
