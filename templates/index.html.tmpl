                    <option value="1">Human</option>
                    <option value="2">Orc</option>
                    <option value="3">Dwarf</option>
                    <option value="10">Blood Elf</option>
                    <option value="22" selected>Worgen</option>
                </select>
            </div>

            <!-- Gender Selector -->
            <div>
                <label for="gender" class="form-label">Select Gender:</label>
                <select id="gender" class="form-control">
                    <option value="0">Male</option>
                    <option value="1" selected>Female</option>
                </select>
            </div>

            <!-- Hair Style Selector -->
            <div>
                <label for="hairstyle" class="form-label">Select Hair Style:</label>
                <select id="hairstyle" class="form-control">
                    <option value="1" selected>Style 1</option>
                    <option value="2">Style 2</option>
                    <option value="3">Style 3</option>
                </select>
            </div>
            
            <!-- Submit Button -->
            <button id="character-btn" type="button" class="submit-btn mt-4">Display Character</button>
        </form>
    </div>

    <!-- Item Viewer -->
    <div class="warcraft-frame w-[500px]">
        <h1>Item Viewer</h1>
        <div id="model_3d2" class="w-full h-96"></div> <!-- Item viewer area -->

        <!-- Item Display ID Form -->
        <form id="item-form" class="form-container">
            <label for="item_id" class="form-label">Select Item:</label>
                <select id="item_id" class="form-control">
                    <option value="48406">Relentless Gladiator's Claymore</option>
                    <option value="51936">Citadel Enforcer's Claymore</option>
                    <option value="47737">Reckoning</option>
                    <option value="42331">Hateful Gladiator's Greatsword</option>
                    <option value="42334">Relentless Gladiator's Greatsword</option>
                    <option value="49299">Keen Obsidian Edged Blade</option>
                    <option value="47951" selected>Reckoning</option>
                    <option value="51392">Wrathful Gladiator's Greatsword</option>
                    <option value="45950">Furious Gladiator's Claymore</option>
                    <option value="50048">Quel'Delar, Might of the Faithful</option>
                    <option value="51393">Wrathful Gladiator's Claymore</option>
                    <option value="47515">Decimation</option>
                    <option value="48023">Edge of Agony</option>
                    <option value="50070">Glorenzelg, High-Blade of the Silver Hand</option>
                    <option value="50049">Quel'Delar, Ferocity of the Scorned</option>
                    <option value="42332">Deadly Gladiator's Greatsword</option>
                    <option value="47516">Fleshrender</option>
                    <option value="47884">Edge of Agony</option>
                    <option value="45868">Aesir's Edge</option>
                    <option value="45516">Voldrethar, Dark Blade of Oblivion</option>
                </select>
            <button id="item-btn" type="button" class="submit-btn">Display Item</button>
        </form>
    </div>
</div>

    <script type="module">
        window.CONTENT_PATH = `http://localhost:3000/modelviewer/live/`
        import {generateModels, modelingType} from '/static/index.js';

        const character = {
            "race": 22,  
            "gender": 1,  
            "skin": 2,
            "face": 1,
            "hairStyle": 1,
            "hairColor": 2,
            "facialStyle": 1,
            "items": [
                [1, 685355], [3, 63609], [5, 63611], [6, 25235], [7, 63613], 
                [8, 21154], [9, 14618], [10, 63616], [21, 677121], [22, 57003]
            ]
        };

        // Sets a new item
        document.getElementById('item-btn').addEventListener('click', async (event) => {
            event.preventDefault();
            console.log('Item form submitted');

            const item_id = document.getElementById('item_id').value;

            fetch(`/item-lookup?item=${item_id}`)
                .then(response => response.json())
                .then(async data => {
                    document.getElementById('model_3d2').innerHTML = '';
                    window.model2 = await generateModels(1, `#model_3d2`, { type: modelingType.ITEM, id: data.displayId });
                });
        }); 
        
        // on character button click
        document.getElementById('character-btn').addEventListener('click', async (event) => {
            event.preventDefault();

            document.getElementById('model_3d').innerHTML = '';
            const raceId = document.getElementById("race").value;
            const gender = document.getElementById("gender").value;
            const hairstyle = document.getElementById("hairstyle").value;

            character.race = parseInt(raceId);
            character.gender = parseInt(gender);
            character.hairStyle = +hairstyle;

            window.model1 = await generateModels(1, `#model_3d`, character);
        }); 
        
        window.model1 = await generateModels(1, `#model_3d`, character);
        window.model2 = await generateModels(1, `#model_3d2`, {type: modelingType.ITEM, id: 60608});

    </script>
