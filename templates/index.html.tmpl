            crossorigin="anonymous"></script>
    
    <!-- Wowhead Model Viewer -->
    <script src="http://localhost:3000/modelviewer/live/viewer/viewer.min.js"></script>
    <script>
        fetch('/get-races')
        .then(response => {
            if (!response.ok) {
                throw new Error('Could not get races from api');
            }
            return response.json();
        })
        .then(data => {
            // Populate the select box with races
            const raceSelect = document.getElementById('race');
            raceSelect.innerHTML = ''; // Clear the existing options

            // Loop through the data to create <option> elements
            for (const [raceName, raceId] of Object.entries(data)) {
                const option = document.createElement('option');
                option.value = raceId;
                option.textContent = raceName;
                
                // Optionally, set the default selected race
                if (raceId === 22) { // Default to Worgen if raceId is 22
                    option.selected = true;
                }

                raceSelect.appendChild(option);
            }
        })
        .catch(error => {
            console.error('There was a problem fetching race data:', error);
        });
    </script>

